        { "action": "Trigger Suggest", "mac": "Ctrl + Space", "win": "Ctrl + Space" }
      ]
    },
    {
      "title": "TypeScript CLI Commands",
      "commands": [
        { "command": "tsc", "desc": "Compile TypeScript files" },
